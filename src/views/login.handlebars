<div class="container mt-5">
  <div class="card text-center">
    <div class="card-header">
      Iniciar sesion
    </div>
    <form
      class="row g-3 needs-validation"
      novalidate
      name="formLoginUser"
      id="formLoginUser"
      action="/api/login"
      method="POST"
    >
      <div class="card-body">
        <label for="emailLogin" class="form-label">Email</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="Ingrese su correo"
        />
        <label for="passwordLogin"></label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Ingrese su contraseña"
        />
        {{#if hasError}}
          <p class="mt-2 bg-danger text-white">{{error}}</p>
        {{/if}}
        <button
          class="btn btn-primary mt-2"
          id="btnLogin"
          name="btnLogin"
        >Iniciar sesion</button>

      </div>
    </form>

  </div>
  <a href="/api/loginGithub" class="btn btn-success mt-2">Iniciar sesión con GitHub</a>
  <div class="mt-2"><a href="/register">Regístrate</a></div>
</div>

